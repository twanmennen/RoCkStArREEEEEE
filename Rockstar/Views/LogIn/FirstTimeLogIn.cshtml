@model Rockstar.ViewModels.Register.FirstTimeLogInViewModel

@{
    ViewData["Title"] = "FirstTimeLogIn";
}

@*<h2>First time login</h2>*@

<h4>Account</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="FirstTimeLogIn" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (Model.RoleId == 2)
            {
                //selecteer hier de juiste van
                <h5>Vul je overige AGENT gegevens in</h5>
                <div class="form-group">
                    <label asp-for="Phone" class="control-label">Phone</label>
                    <input asp-for="Phone" class="form-control"/>
                </div>
                <div class="form-group">
                    <label asp-for="Location" class="control-label">Location</label>
                    <input asp-for="Location" class="form-control"/>
                </div>
                <div class="form-group">
                    <label asp-for="Gender" class="control-label">Gender</label>
                    <input asp-for="Gender" class="form-control"/>
                </div>
            }
            @if (Model.RoleId == 3)
            {
                //selecteer hier de juiste van
                <h5>Vul je overige ROCKSTAR gegevens in</h5>
                <div class="form-group">
                    <label asp-for="Phone" class="control-label">Phone</label>
                    <input asp-for="Phone" class="form-control"/>
                </div>
                <div class="form-group">
                    <label asp-for="Location" class="control-label">Location</label>
                    <input asp-for="Location" class="form-control"/>
                </div>
                <div class="form-group">
                    <label asp-for="Gender" class="control-label">Gender</label>
                    <input asp-for="Gender" class="form-control"/>
                </div>
            }
            @if (Model.RoleId == 4)
            {
                //selecteer hier de juiste van
                <h5>Vul je overige COMPANY gegevens in</h5>
                <div class="form-group">
                    <label asp-for="Phone" class="control-label">Phone</label>
                    <input asp-for="Phone" class="form-control"/>
                </div>
                <div class="form-group">
                    <label asp-for="Location" class="control-label">Location</label>
                    <input asp-for="Location" class="form-control"/>
                </div>
                <div class="form-group">
                    <label asp-for="Gender" class="control-label">Gender</label>
                    <input asp-for="Gender" class="form-control"/>
                </div>
            }
            <button class="btn btn-rockstar" type="submit">Register Rockstar</button>
        </form>
    </div>
</div>