            </label>
            <label>
                <input asp-for="@Model.Categories[category.Id - 1].Rating" type="radio" value="4" />
                <span class="icon">★</span>
                <span class="icon">★</span>
                <span class="icon">★</span>
                <span class="icon">★</span>
            </label>
            <label>
                <input asp-for="@Model.Categories[category.Id - 1].Rating" type="radio" value="5" />
                <span class="icon">★</span>
                <span class="icon">★</span>
                <span class="icon">★</span>
                <span class="icon">★</span>
                <span class="icon">★</span>
            </label>
        </div>
        <textarea asp-for="@Model.Categories[category.Id - 1].Explanation" class="form-control area-verticalresize" placeholder="Licht toe"></textarea>
}

