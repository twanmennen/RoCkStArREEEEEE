@using Rockstar.ViewModels.Account
@model Rockstar.ViewModels.Account.RegisterUserViewModel

<div class="container">
    <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-6 text-center">
            <h1>Register</h1>
        </div>
        <div class="col-lg-3"></div>
    </div>

    <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-6">
            <form method="post">
                <label asp-for="Name" class="control-label">Name</label><br />
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>

                <label asp-for="EMail" class="control-label">EMail</label><br />
                <input asp-for="EMail" class="form-control" />
                <span asp-validation-for="EMail" class="text-danger"></span>

                <label asp-for="PassWord" class="control-label">Password</label><br />
                <input asp-for="PassWord" class="form-control" type="password" />
                <span asp-validation-for="PassWord" class="text-danger"></span>

                <label>Selecteer een rol</label>

                <input hidden asp-for="RoleId" />
                <select asp-for="Role" class="form-control">
                    @if (Model.RoleId == 1)
                    {
                        <option value="2">Agent</option>


                    }
                    @if (Model.RoleId == 2)
                    {
                        <option value="3">RockStar</option>
                        <option value="4">Company</option>

                    }
                </select>
                
                <br />
                <button class="btn btn-default basicbutton" type="submit">Register Rockstar</button>
            </form>
        </div>
        <div class="col-lg-3"></div>
    </div>
</div>

